<odoo>
    <!-- Tree/List View for Raspberry & Room Connections -->
    <record id="view_rasproom_connection_tree" model="ir.ui.view">
        <field name="name">rasproom.connection.tree</field>
        <field name="model">rasproom.connection</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="room_id"/>
                <field name="raspName"/>
                <field name="status"/>
            </list>
        </field>
    </record>
    

    <!-- Form View for Raspberry & Room Connections -->
    <record id="view_rasproom_connection_form" model="ir.ui.view">
        <field name="name">rasproom.connection.form</field>
        <field name="model">rasproom.connection</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="room_id"/>
                        <field name="raspName"/>
                        <field name="status"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
