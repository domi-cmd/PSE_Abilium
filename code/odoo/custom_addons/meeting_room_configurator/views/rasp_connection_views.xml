<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Form View -->
        <record id="view_rasproom_connection_form" model="ir.ui.view">
            <field name="name">rasproom.connection.form</field>
            <field name="model">rasproom.connection</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="test_mqtt_connection" string="Test MQTT Connection" 
                                type="object" class="oe_highlight" 
                                invisible="use_mqtt == False"/>
                        <button name="connect_mqtt" string="Connect" 
                                type="object" class="btn-success"
                                invisible="use_mqtt == False or mqtt_connection_state == 'connected'"/>
                        <button name="disconnect_mqtt" string="Disconnect" 
                                type="object" class="btn-danger"
                                invisible="use_mqtt == False or mqtt_connection_state != 'connected'"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="request_status_update" type="object" 
                                    class="oe_stat_button" icon="fa-refresh"
                                    invisible="use_mqtt == False or mqtt_connection_state != 'connected'">
                                <div class="o_stat_info">
                                    <span class="o_stat_text">Request Status</span>
                                </div>
                            </button>
                            <button name="restart_raspberry_service" type="object" 
                                    class="oe_stat_button" icon="fa-recycle"
                                    invisible="use_mqtt == False or mqtt_connection_state != 'connected'">
                                <div class="o_stat_info">
                                    <span class="o_stat_text">Restart Service</span>
                                </div>
                            </button>
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Connection Name"/>
                            </h1>
                            <div class="badge badge-success" invisible="rasp_online == False">
                                Online
                            </div>
                            <div class="badge badge-danger" invisible="rasp_online == True">
                                Offline
                            </div>
                        </div>
                        <group>
                            <group>
                                <field name="room_id"/>
                                <field name="raspName"/>
                                <field name="status"/>
                                <field name="rasp_online" invisible="1"/>
                            </group>
                            <group name="raspberry_status" string="Raspberry Pi Status" 
                                   invisible="rasp_last_update == False">
                                <field name="rasp_temperature" widget="float" string="CPU Temperature"/>
                                <field name="rasp_cpu_usage" widget="progressbar" string="CPU Usage"/>
                                <field name="rasp_memory_usage" widget="progressbar" string="Memory Usage"/>
                                <field name="rasp_uptime" string="Uptime" widget="float_time"/>
                                <field name="rasp_last_update" string="Last Update"/>
                            </group>
                        </group>
                        
                        <notebook>
                            <page string="MQTT Configuration" name="mqtt_config">
                                <group>
                                    <field name="use_mqtt"/>
                                </group>
                                
                                <group invisible="use_mqtt == False">
                                    <group string="Broker Settings">
                                        <field name="mqtt_broker" 
                                               required="use_mqtt == True"/>
                                        <field name="mqtt_port" 
                                               required="use_mqtt == True"/>
                                        <field name="mqtt_username"/>
                                        <field name="mqtt_password" password="True"/>
                                        <field name="mqtt_use_tls"/>
                                    </group>
                                    <group string="Connection Options">
                                        <field name="mqtt_client_id" placeholder="Leave empty for auto-generation"/>
                                        <field name="mqtt_topic_prefix"/>
                                        <field name="mqtt_qos"/>
                                        <field name="mqtt_keep_alive"/>
                                    </group>
                                </group>
                                
                                <group invisible="use_mqtt == False">
                                    <group string="Connection Status">
                                        <field name="mqtt_connection_state" 
                                               decoration-success="mqtt_connection_state == 'connected'"
                                               decoration-info="mqtt_connection_state == 'connecting'"
                                               decoration-danger="mqtt_connection_state == 'error'"
                                               decoration-muted="mqtt_connection_state == 'disconnected'"/>
                                        <field name="mqtt_last_connection"/>
                                        <field name="mqtt_last_message"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Communication Log" name="communication_log">
                                <p class="text-muted">Communication log will be displayed here in future updates.</p>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- List View (formerly Tree View) -->
        <record id="view_rasproom_connection_tree" model="ir.ui.view">
            <field name="name">rasproom.connection.tree</field>
            <field name="model">rasproom.connection</field>
            <field name="arch" type="xml">
                <list decoration-danger="mqtt_connection_state == 'error'" decoration-success="rasp_online == True">
                    <field name="name"/>
                    <field name="room_id"/>
                    <field name="raspName"/>
                    <field name="status"/>
                    <field name="use_mqtt"/>
                    <field name="mqtt_connection_state" 
                           decoration-success="mqtt_connection_state == 'connected'"
                           decoration-info="mqtt_connection_state == 'connecting'"
                           decoration-danger="mqtt_connection_state == 'error'"
                           decoration-muted="mqtt_connection_state == 'disconnected'"/>
                    <field name="rasp_online"/>
                    <field name="rasp_last_update"/>
                    <button name="request_status_update" string="Request Status" type="object" icon="fa-refresh"
                            invisible="mqtt_connection_state != 'connected' or status == False"/>
                </list>
            </field>
        </record>

        <!-- Search View -->
        <record id="view_rasproom_connection_search" model="ir.ui.view">
            <field name="name">rasproom.connection.search</field>
            <field name="model">rasproom.connection</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="room_id"/>
                    <field name="raspName"/>
                    <separator/>
                    <filter string="Active" name="active" domain="[('status', '=', True)]"/>
                    <filter string="Using MQTT" name="use_mqtt" domain="[('use_mqtt', '=', True)]"/>
                    <filter string="Online" name="online" domain="[('rasp_online', '=', True)]"/>
                    <filter string="Connected" name="connected" domain="[('mqtt_connection_state', '=', 'connected')]"/>
                    <group expand="0" string="Group By">
                        <filter string="Room" name="group_by_room" context="{'group_by': 'room_id'}"/>
                        <filter string="Connection Status" name="group_by_status" context="{'group_by': 'mqtt_connection_state'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Action -->
        <record id="action_rasproom_connection" model="ir.actions.act_window">
            <field name="name">Raspberry Connections</field>
            <field name="res_model">rasproom.connection</field>
            <field name="view_mode">list,form</field>
            <field name="search_view_id" ref="view_rasproom_connection_search"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first Raspberry Connection!
                </p>
            </field>
        </record>

        <!-- Menu Item (commented out in original) -->
        <!-- <menuitem id="menu_rasproom_connection"
                  name="Raspberry Connections"
                  action="action_rasproom_connection"
                  parent="your_parent_menu"
                  sequence="20"/> -->
                  
        <!-- Scheduled Action for Connection Monitoring -->
        <record id="ir_cron_mqtt_monitor_connections" model="ir.cron">
            <field name="name">MQTT: Monitor Connections</field>
            <field name="model_id" ref="model_rasproom_connection"/>
            <field name="state">code</field>
            <field name="code">model._mqtt_cron_monitor_connections()</field>
            <field name="interval_number">5</field>
            <field name="interval_type">minutes</field>
            <field name="active" eval="True"/>
        </record>
    </data>
</odoo>